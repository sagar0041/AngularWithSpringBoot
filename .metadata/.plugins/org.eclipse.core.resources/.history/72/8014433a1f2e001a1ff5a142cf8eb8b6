version: '3'
services:
  database:
    image: mysql
    container_name: database
    environment:
      MYSQL_ROOT_PASSWORD=root
      MYSQL_DATABASE=mettingroom
      MYSQL_USER=root
      MYSQL_PASSWORD=root
    ports:
    - 3306:3306
    volumes:
    - mettingroomdata:/var/lib/mysql
    networks:
    - backendNetwork
    
  springbootapp:
    image: 9082622521/bookmettingroom:0.0.1
    container_name: bookmettingroom
    ports:
    - 8080:8080
    depends_on:
    - database
    volumes:
    - ./Spring/target/spring-0.0.1-SNAPSHOT.jar:/application.jar
    command: ["java", "jar", "application.jar"]
    networks:
    - backendNetwork
    - frontendNetwork
   