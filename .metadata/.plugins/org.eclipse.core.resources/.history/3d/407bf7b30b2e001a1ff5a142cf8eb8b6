version: '2'
services:
  springbootapp:
    image: porichigo15/BookMeetingRoom:0.0.1
    container_name: BookMeetingRoom
    depends_on:
    - mariadb
    environment:
    - SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3306/mettingroom?useSSL=false
    ports:
    - 8080:8080
  db:
    image: mysql:5.7
    container_name: mettingroom
    volumes:
    - /home/docker/volumes/myapp/mysql/:/var/lib/mysql/
    environment:
    - MYSQL_ROOT_PASSWORD=root
    - MYSQL_DATABASE=mettingroom
    - MYSQL_USER=root
    - MYSQL_PASSWORD=root
    command: mysqld --lower_case_table_names=1 --skip-ssl --character_set_server=utf8